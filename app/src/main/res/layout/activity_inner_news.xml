<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#232323"
        tools:context=".InnerNewsActivity">

        <LinearLayout
            android:id="@+id/linearLayoutTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#191919"
            android:elevation="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titlePageTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:paddingVertical="20dp"
                android:text="Detail Information"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/innerAutherTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayoutTop"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="autherTV"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/innerNewsImage"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_below="@id/innerAutherTV"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="#FF9800" />

        <TextView
            android:id="@+id/innerNewsTitleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/innerNewsImage"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="newsTitleTV"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/innerNewsContentTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/innerNewsTitleTV"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:paddingBottom="10dp"
            android:text="newsContentTV"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/innerNewsContentTV"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/clickLinkTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/innerNewsContentTV"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                android:clickable="true"
                android:focusable="true"
                android:paddingBottom="10dp"
                android:text="Click "
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/sourceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/innerNewsContentTV"
                android:layout_marginEnd="15dp"
                android:layout_toEndOf="@id/clickLinkTV"
                android:clickable="true"
                android:focusable="true"
                android:paddingBottom="10dp"
                android:text="Source"
                android:textColor="#2196F3"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>